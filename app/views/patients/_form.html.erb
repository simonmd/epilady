<%= form_for @patient, html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :patid, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :patid, class: 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, class: 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :code, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, class: 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :age, class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :age, class: 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sex, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :sex, class: 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                patients_path, class: 'btn' %>
  </div>
<% end %>
