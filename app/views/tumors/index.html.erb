<%- model_class = Tumor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:hiperintensidad) %></th>
      <th><%= model_class.human_attribute_name(:lesion) %></th>
      <th><%= model_class.human_attribute_name(:efecto_masa) %></th>
      <th><%= model_class.human_attribute_name(:nodulo) %></th>
      <th><%= model_class.human_attribute_name(:calsificaciones) %></th>
      <th><%= model_class.human_attribute_name(:hallazgos) %></th>
      <th><%= model_class.human_attribute_name(:circunvolucion) %></th>
      <th><%= model_class.human_attribute_name(:lobulo) %></th>
      <th><%= model_class.human_attribute_name(:hemisferio) %></th>
      <th><%= model_class.human_attribute_name(:report_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tumors.each do |tumor| %>
      <tr>
        <td><%= link_to tumor.id, tumor_path(tumor) %></td>
        <td><%= tumor.hiperintensidad %></td>
        <td><%= tumor.lesion %></td>
        <td><%= tumor.efecto_masa %></td>
        <td><%= tumor.nodulo %></td>
        <td><%= tumor.calsificaciones %></td>
        <td><%= tumor.hallazgos %></td>
        <td><%= tumor.circunvolucion %></td>
        <td><%= tumor.lobulo %></td>
        <td><%= tumor.hemisferio %></td>
        <td><%= tumor.report_id %></td>
        <td><%=l tumor.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tumor_path(tumor), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tumor_path(tumor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tumor_path,
            :class => 'btn btn-primary' %>
