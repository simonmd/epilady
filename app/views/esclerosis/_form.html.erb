<%= form_for @esclerosi, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :atrofia_sunj, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :atrofia_sunj, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hiperintensidad, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hiperintensidad, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estructura_anormal, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :estructura_anormal, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :volumen, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :volumen, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :esclerosis, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :esclerosis, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hallazgos_extra, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :hallazgos_extra, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :report_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :report_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                esclerosis_path, :class => 'btn' %>
  </div>
<% end %>
