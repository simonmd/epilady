<%= form_for @malformacion, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :centro_hipert, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :centro_hipert, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :senal_peri, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :senal_peri, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :anillo_hipo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :anillo_hipo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vaso, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :vaso, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hallazgo_mv, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hallazgo_mv, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :circunvolucion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :circunvolucion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lobulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lobulo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hemisferio, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hemisferio, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :report_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :report_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                malformacions_path, :class => 'btn' %>
  </div>
<% end %>
